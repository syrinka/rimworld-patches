<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
        <li>Power++</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="ARKPPP_PowerBeamAbsorptionDish"]/graphicData/drawSize</xpath>
          <value>
            <drawSize>(9,9)</drawSize>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="ARKPPP_PowerBeamAbsorptionDish"]/size</xpath>
          <value>
            <size>(9,9)</size>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>